<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

    <TextView
        android:id="@+id/sc_pay_name"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/semibold"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:singleLine="true"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/sc_pay_belowName"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sc_pay_name"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:singleLine="true"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/sc_pay_rightTop"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sc_pay_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-33dp"
        android:layout_marginRight="7dp"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:gravity="right"
        android:padding="8dp"
        android:singleLine="true"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sc_pay_belowName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-21dp"
        android:layout_marginRight="7dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/sc_image_btn_del"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@null"
            android:padding="3dp"
            android:src="@android:drawable/ic_delete" />

        <ImageButton
            android:id="@+id/sc_image_btn_paid"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ic_checked"
            android:padding="3dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/sc_pay_tv_onbtns"
        android:layout_width="153dp"
        android:layout_height="39dp"
        android:layout_below="@id/sc_pay_belowName"
        android:textColor="@color/green"
        android:gravity="right"
        android:layout_marginRight="12sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-21dp" />
</RelativeLayout>
