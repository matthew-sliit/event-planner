<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepg">


  <ImageView
      android:id="@+id/hr_ignore7"
      android:layout_width="388dp"
      android:layout_height="0dp"
      android:layout_marginTop="16dp"
      android:background="@color/white"
      android:scaleType="fitXY"
      android:src="@android:drawable/divider_horizontal_bright"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.304"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cardView5" />

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView5"
      android:layout_width="132dp"
      android:layout_height="120dp"
      android:layout_marginStart="48dp"
      android:layout_marginTop="16dp"
      android:onClick="openBudgets"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/hr_ignore4">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="#FFC107"
            app:srcCompat="@mipmap/cal_foreground" />

        <TextView

            android:id="@+id/textView10_budget"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="Budget"
            android:textColor="#FFC107"
            android:textSize="28sp"
            android:textStyle="bold" />

  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView4"
      android:layout_width="132dp"
      android:layout_height="120dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="60dp"
      android:onClick="openVendors"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toEndOf="@+id/cardView5"
      app:layout_constraintTop_toBottomOf="@+id/hr_ignore4">

      <ImageView
          android:id="@+id/imageView12"
          android:layout_width="match_parent"
          android:layout_height="88dp"
          android:background="@color/colorAccent"
          app:srcCompat="@mipmap/vendor_foreground" />

      <TextView

          android:id="@+id/textView10_vendors"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom|center"
          android:text="Vendors"
          android:textColor="@color/colorAccent"
          android:textSize="28sp"
          android:textStyle="bold" />

  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView6"
      android:layout_width="132dp"
      android:layout_height="120dp"
      android:layout_marginStart="48dp"
      android:layout_marginTop="12dp"
      android:onClick="openEvents"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/hr_ignore7">


      <ImageView
          android:id="@+id/imageView13"
          android:layout_width="match_parent"
          android:layout_height="88dp"
          android:background="#E91E63"
          app:srcCompat="@mipmap/event_foreground" />

      <TextView

          android:id="@+id/textView10_events"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom|center"
          android:text="Events"
          android:textColor="#E91E63"
          android:textSize="28sp"
          android:textStyle="bold" />

  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView3"
      android:layout_width="132dp"
      android:layout_height="120dp"
      android:layout_marginTop="28dp"
      android:layout_marginEnd="56dp"
      android:onClick="openGuests"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView15">

      <ImageView
          android:id="@+id/imageView10_img"
          android:layout_width="match_parent"
          android:layout_height="88dp"
          android:background="@color/design_default_color_error"
          app:srcCompat="@mipmap/guest_foreground" />

      <TextView

          android:id="@+id/textView10_guests"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom|center"
          android:text="Guests"
          android:textColor="@android:color/holo_red_dark"
          android:textSize="30sp"
          android:textStyle="bold" />


  </androidx.cardview.widget.CardView>

  <ImageView
      android:id="@+id/hr_ignore4"
      android:layout_width="388dp"
      android:layout_height="0dp"
      android:layout_marginTop="24dp"
      android:background="@color/white"
      android:scaleType="fitXY"
      android:visibility="invisible"
      android:src="@android:drawable/divider_horizontal_bright"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.478"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cardView" />

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView"
      android:layout_width="132dp"
      android:layout_height="120dp"
      android:layout_marginTop="28dp"
      android:onClick="openTasks"
      app:layout_constraintEnd_toStartOf="@+id/cardView3"
      app:layout_constraintHorizontal_bias="0.527"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView15">


      <ImageView
          android:id="@+id/imageView9"
          android:layout_width="match_parent"
          android:layout_height="88dp"
          android:background="@color/blue"
          app:srcCompat="@mipmap/task_foreground" />

      <TextView

          android:id="@+id/textView10_tasks"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom|center"
          android:text="Tasks"
          android:textColor="@color/blue"
          android:textSize="28sp"
          android:textStyle="bold" />


  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView7"
      android:layout_width="134dp"
      android:layout_height="120dp"
      android:layout_marginTop="12dp"
      android:onClick="openSummary"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.402"
      app:layout_constraintStart_toEndOf="@+id/cardView6"
      app:layout_constraintTop_toBottomOf="@+id/hr_ignore7">

      <ImageView
          android:id="@+id/imageView14"
          android:layout_width="match_parent"
          android:layout_height="88dp"
          android:background="#FF5722"
          app:srcCompat="@mipmap/summary_foreground" />

      <TextView

          android:id="@+id/textView10_summary"

          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom|center"
          android:text="Summary"
          android:textColor="#FF5722"
          android:textSize="28sp"
          android:textStyle="bold" />


  </androidx.cardview.widget.CardView>

  <ImageView
      android:id="@+id/imageView15"
      android:layout_width="414dp"
      android:layout_height="193dp"
      android:cropToPadding="false"
      android:paddingHorizontal="0dp"
      android:paddingVertical="0dp"
      android:scaleType="centerCrop"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar4"
      app:srcCompat="@mipmap/homeimg_2_foreground" />

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar4"
      android:layout_width="413dp"
      android:layout_height="48dp"
      android:background="@color/purple"
      android:minHeight="?attr/actionBarSize"
      android:theme="?attr/actionBarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:title="@string/toolbar_eventplan"
      app:titleTextColor="#FFFFFF" />

  <!--
  <ImageView
      android:id="@+id/iv_menu"
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:onClick="openMenuItem"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.976"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.014"
      app:srcCompat="@drawable/ic_baseline_more_vert_24" />-->

    <TextView
        android:id="@+id/tv_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Event Planner"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView15" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
